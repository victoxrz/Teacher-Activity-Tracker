<div class="container-fluid module-navigation">
    <div class="row">
        <div class="col-md-3 col-lg-3 mb-4">
                <div style="max-height: 75vh; overflow-y: auto; min-height: 200px;">
                    <div class="list-group ids-list-nav gap-2">
                    {{#toc}}
                    <div>
                    <div class="list-group-item list-group-item-light text-uppercase font-weight-bold border-0 bg-light">
                        {{title}}
                    </div>
                        {{#activities}}
                        <a href="{{url}}" class="{{#is_active}}active{{/is_active}} list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div class="text-truncate mr-2" title={{title}}>{{title}}</div>
                            <i class="fa 
                            {{#is_active}}
                                fa-pencil
                            {{/is_active}}
                            {{^is_active}}
                                {{#is_completed}}
                                    fa-check-circle text-success
                                {{/is_completed}}
                                {{^is_completed}}
                                    fa-circle-o text-muted
                                {{/is_completed}}
                            {{/is_active}}"></i>
                        </a>
                        {{/activities}}
                    </div>
                    {{/toc}}
                    </div>
                </div>
        </div>
        <div class="col-md-9 col-lg-9">
            {{{content_html}}}
        </div>
    </div>
</div>